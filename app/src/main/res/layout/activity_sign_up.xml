<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_signup_tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="0dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_signup_til_username"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/colorPrimary"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:errorEnabled="true"
        app:passwordToggleTint="@color/colorPrimary"
        android:layout_gravity="center"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_signup_et_username"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="@string/username"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:id="@+id/activity_signup_til_email"
        android:hint="@string/email"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        android:textColorHint="@color/colorPrimary"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeWidth="2dp"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_signup_et_email"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:id="@+id/activity_signup_til_password"
        android:hint="@string/password"
        android:layout_gravity="center"
        android:textColorHint="@color/colorPrimary"
        app:passwordToggleTint="@color/colorPrimary"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeWidth="2dp"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_signup_et_password"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:id="@+id/activity_signup_til_confirm_password"
        android:hint="@string/confirm_password"
        android:layout_gravity="center"
        android:textColorHint="@color/colorPrimary"
        app:endIconMode="password_toggle"
        app:passwordToggleTint="@color/colorPrimary"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_signup_et_confirm_password"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_signup_til_confirm_code"
            android:hint="@string/confirm_code"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimary"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/activity_signup_et_confirm_code"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/activity_signup_btn_get_code"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="@string/get_code"
            android:textAllCaps="false"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="19dp" />
            </LinearLayout>

    <Button
        android:id="@+id/activity_signup_btn_signup"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"/>
    <TextView
        android:id="@+id/activity_signup_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_account"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
    android:id="@+id/activity_signup_tv_skip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/skip"
    android:textColor="@color/colorPrimary"
    android:textSize="15sp"
    android:textStyle="bold"
    android:layout_gravity="right"
    android:layout_marginRight="12dp"
    android:layout_marginTop="20dp"
    android:justificationMode="inter_word"
    android:drawableRight="@drawable/ic_arrow_forward"/>
</LinearLayout>