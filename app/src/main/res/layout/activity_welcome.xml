<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity"
    android:orientation="vertical"
    android:background="@drawable/white_layout">

    <Button
        android:id="@+id/activity_welcome_btn_signupWithGmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="400dp"
        android:background="@drawable/custom_button"
        android:text="@string/signup_with_email"
        android:textSize="17sp"
        android:drawableLeft="@drawable/icons_google30"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/activity_welcome_btn_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_welcome_tv_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:justificationMode="inter_word"
        android:drawableRight="@drawable/ic_arrow_forward"/>

</LinearLayout>