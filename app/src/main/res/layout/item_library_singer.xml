<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="25dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/item_library_singer_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CFCECC">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_library_singer_avatar_of_singer"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/ic_some_item_avt"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/blue_500"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/item_library_singer_name_of_singer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/singer"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxWidth="125dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>